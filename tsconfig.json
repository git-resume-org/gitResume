{
  "compilerOptions": {
    "target": "ES2020", // newer ECMA
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@/*": [
        "./client/*"
      ],
      "@/server/*": [
        "./server/*"
      ],
    }
  },
  "include": [
    "client/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
